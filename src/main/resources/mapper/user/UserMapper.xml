<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.someexp.modules.user.mapper.UserMapper">
    <select id="getByPhone" resultType="com.someexp.modules.user.domain.entity.User">
        select *
        from user
        where phone = #{phone};
    </select>

    <select id="getById" resultType="com.someexp.modules.user.domain.entity.User">
        select *
        from user
        where id = #{id};
    </select>

    <insert id="save" parameterType="com.someexp.modules.user.domain.entity.User" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into user
            (name, password, phone, role, status)
        values (#{name}, #{password}, #{phone}, 'user', 1)
    </insert>
</mapper>