<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.someexp.modules.admin.mapper.AdminAccountMapper">

    <resultMap id="ADMIN_ENTITY" type="com.someexp.modules.admin.domain.entity.Admin">
        <id column="adm_id" property="id"/>
        <result column="adm_parent" property="parent"/>
        <result column="adm_name" property="name"/>
        <result column="adm_password" property="password"/>
        <result column="adm_phone" property="phone"/>
        <result column="adm_status" property="status"/>
    </resultMap>

    <resultMap id="ADMIN_VO" type="com.someexp.modules.admin.domain.vo.AdminVO">
        <id column="adm_id" property="id"/>
        <result column="adm_parent" property="parent"/>
        <result column="adm_name" property="name"/>
        <result column="adm_phone" property="phone"/>
        <result column="adm_status" property="status"/>
    </resultMap>

    <insert id="save" parameterType="com.someexp.modules.admin.domain.entity.Admin" useGeneratedKeys="true"
            keyProperty="id" keyColumn="adm_id">
        INSERT INTO admin (adm_parent, adm_name, adm_password, adm_phone, adm_status)
        VALUES (#{parent}, #{name}, #{password}, #{phone}, 1);
    </insert>

    <select id="getByPhone" resultMap="ADMIN_ENTITY">
        SELECT *
        FROM admin
        WHERE adm_phone = #{phone}
    </select>

    <select id="get" resultMap="ADMIN_ENTITY">
        SELECT *
        FROM admin
        WHERE adm_id = #{id}
    </select>

    <select id="listByPage" resultMap="ADMIN_VO">
        SELECT *
        FROM admin
        LIMIT #{offset}, #{rowCount}
    </select>

    <select id="countByPage" resultType="int">
        SELECT COUNT(*)
        FROM admin
    </select>

    <update id="update" parameterType="com.someexp.modules.admin.domain.entity.Admin">
        UPDATE admin
        <set>
            <if test="status != null">
                adm_status = #{status}
            </if>
        </set>
        WHERE adm_id = #{id}
    </update>

    <select id="listByParent" resultMap="ADMIN_ENTITY">
        SELECT *
        FROM admin
        WHERE adm_parent = #{parentId}
    </select>

</mapper>
