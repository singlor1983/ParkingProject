<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.someexp.modules.admin.mapper.AdminReviewMapper">

    <resultMap id="REVIEW_ENTITY" type="com.someexp.modules.admin.domain.entity.Review">
        <id column="rew_id" property="id"/>
        <result column="rew_pid" property="pid"/>
        <result column="rew_uid" property="uid"/>
        <result column="rew_score" property="score"/>
        <result column="rew_content" property="content"/>
        <result column="rew_create_date" property="createDate"/>
    </resultMap>

    <select id="listByPage" resultMap="REVIEW_ENTITY">
        SELECT *
        FROM review FORCE INDEX (${indexName})
        <where>
            <if test="uid != null">
                AND rew_uid = #{uid}
            </if>
            <if test="pid != null">
                AND rew_pid = #{pid}
            </if>
        </where>
        ORDER BY rew_id DESC
        LIMIT #{offset}, #{rowCount}
    </select>

    <select id="countByPage" resultType="int">
        SELECT COUNT(*)
        FROM review FORCE INDEX (${indexName})
        <where>
            <if test="uid != null">
                AND rew_uid = #{uid}
            </if>
            <if test="pid != null">
                AND rew_pid = #{pid}
            </if>
        </where>
    </select>

    <select id="get" resultMap="REVIEW_ENTITY">
        SELECT *
        FROM review
        WHERE rew_id = #{id}
    </select>

</mapper>
